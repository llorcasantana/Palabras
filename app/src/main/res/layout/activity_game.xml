            android:background="@drawable/bg_slot"
            android:text=""
            android:layout_marginEnd="2dp"/>
        <TextView
            android:onClick="backCharacterToQuizLetter"
            android:id="@+id/charSelectedSix"
            android:fontFamily="@font/avenirnextheavy"
            android:textAlignment="center"
            android:textSize="23sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_slot"
            android:text=""
            android:layout_marginEnd="2dp"/>
        <TextView
            android:onClick="backCharacterToQuizLetter"
            android:id="@+id/charSelectedSeven"
            android:fontFamily="@font/avenirnextheavy"
            android:textAlignment="center"
            android:textSize="23sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_slot"
            android:text=""
            android:layout_marginEnd="2dp"/>
        <TextView
            android:onClick="backCharacterToQuizLetter"
            android:id="@+id/charSelectedEight"
            android:fontFamily="@font/avenirnextheavy"
            android:textAlignment="center"
            android:textSize="23sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_slot"
            android:text=""
            android:layout_marginEnd="2dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/quizLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/fileOne"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:onClick="addCharacterSelected"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cps_actionbar_btn"
                android:fontFamily="@font/avenirnextheavy"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:text="F"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="G"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="H"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="I"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="J"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="K"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/btn_reveal_word"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_joker_remove"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/fileTwo"
            android:layout_below="@id/fileOne"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="F"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="G"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="J"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="I"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
                android:paddingTop="3dp"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cps_actionbar_btn"
                android:text="J"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:onClick="addCharacterSelected"
                android:fontFamily="@font/avenirnextheavy"
                android:textAlignment="center"
